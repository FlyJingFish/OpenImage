<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <solid android:color="#fff0f0f0" />
            <size
                android:width="8dip"
                android:height="8dip" />
        </shape>

    </item>
    <item >
        <shape
            android:shape="oval">
            <solid android:color="#ffffffff" />
            <size
                android:width="8dip"
                android:height="8dip" />
        </shape>

    </item>
</selector>
