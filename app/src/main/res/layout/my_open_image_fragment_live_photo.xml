<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.flyjingfish.openimagefulllib.LivePhotoVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.flyjingfish.openimagefulllib.LivePhotoVideoPlayer>

    <LinearLayout
        android:id="@+id/ll_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="35dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/bg_open_image_live"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_live"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/open_image_live_open_white"/>
        <TextView
            android:id="@+id/tv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginHorizontal="2dp"
            android:textColor="@android:color/white"
            android:text="@string/live"/>
        <ImageView
            android:id="@+id/iv_live_down"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/open_image_down"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_live_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_live"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/bg_open_image_live_pop"
        android:layout_alignLeft="@+id/ll_live"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_switch_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">
            <ImageView
                android:id="@+id/iv_switch_live"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/open_image_live_close_black"/>
            <TextView
                android:id="@+id/tv_switch_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginStart="2dp"
                android:textColor="#2c2c2c"
                android:text="@string/close_live"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_switch_live"
            android:layout_alignStart="@+id/ll_switch_live"
            android:layout_alignEnd="@+id/ll_switch_live"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/open_image_live_replay_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginStart="2dp"
                android:textColor="#2c2c2c"
                android:text="@string/replay"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>